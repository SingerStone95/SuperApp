<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#fa7270">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_shortcut_item_img">

        <ImageView
            android:id="@+id/iv_tool"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_shortcut_item_img" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_shortcut_item_txt"
            android:text="å“”"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="31dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:gravity="center|top"
            android:layout_centerHorizontal="true"
            android:src="@drawable/https_no_bkg"
            android:background="@drawable/shape_fastcut_tag_bkg"
            android:textSize="9dp" />

    </RelativeLayout>

    <singerstone.com.superapp.waveeffect.DebugTextView
        android:id="@+id/tv_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16dp" />
</LinearLayout>